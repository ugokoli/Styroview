<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->

    <declare-styleable name="FingerSelector">
        <attr name="orientation" format="enum">
            <enum name="up" value="1"/>
            <enum name="down" value="2"/>
        </attr>
        <attr name="defaultHand" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="defaultFinger" format="enum">
            <enum name="thumb" value="0"/>
            <enum name="index" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="ring" value="3"/>
            <enum name="pinky" value="4"/>
        </attr>
    </declare-styleable>
</resources>